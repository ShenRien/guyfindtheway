<style>
  .navbar {
    max-width: var(--container-max-size);
    padding: var(--space-7) var(--container-padding-sides);
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: var(--space-4);
    position: relative;
  }
  .navbar nav {
    flex: 1;
  }
  .navbar a {
    text-decoration: none;
    color: unset;
  }
  .navbar a:hover {
    color: var(--color-primary);
    transition: color 0.2s ease-in-out;
  }
  .navbar-links {
    list-style: none;
    display: flex;
    align-items: left;
    gap: var(--space-6);
    row-gap: var(--space-4);
    flex-wrap: wrap;
    justify-content: flex-start;
  }
  

  .link-home-container {
    width: 100%;
    flex: 0 0 auto;
  }
  
  .navbar-links > *:not(:first-child) {
    margin-left: 1px;
    margin-top: var(--space-4);
  }

  .toggler{
    position: absolute;
    right: var(--container-padding-sides);
    transform: translateY(-50%);
  }

  .link-home {
    font-weight: bold;
    color: var(--color-primary);
    font-size: var(--font-size-lg);
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }
  .site-icon {
    width: 60px;
    height: 60px;
    border-radius: 8px;
    flex-shrink: 0;
  }
  
  /* Responsive fix */
  @media (max-width: 1250px) {
    .navbar-links {
      justify-content: flex-start;
    }
    .link-home-container {
      width: 100%;
      flex: 0 0 auto;
    }

    .site-icon {
      width: 55px; 
      height: 55px;
    }
  }
  
  /* Mobile nh·ªè h∆°n */
  @media (max-width: 768px) {
    .navbar-links {
      gap: var(--space-4);
    }
    .site-icon {
      width: 50px;
      height: 50px;
    }
    .link-home {
      font-size: var(--font-size-md);
    }
    .navbar-links > *:not(:first-child) {
      flex: 1 1 calc(100% - var(--space-1));
      font-size: var(--font-size-sm);
      margin-top: 0;
    }
  }
</style>

<header class="navbar">
  <nav>
    <ul class="navbar-links">
      <!-- ƒê√É S·ª¨A: Th√™m class cho container -->
      <li class="link-home-container">
        <div class="link-home">
          <img class="site-icon" 
               src="{{ '/favicon/starfish-android-chrome-192x192.png' | url }}" 
               alt="Starfish icon"
               width="80" 
               height="80">
          <a href="{{ '/' | url }}">{{ site.shortTitle }}
            {% if site.hasPill  %}
              <span class="emoji-fix">üíä</span>
            {% endif %}
          </a>
          <div class="toggler">{% include "dark-toggler.liquid" %}</div>
        </div>
      </li>
      
      <!-- C√°c menu items kh√°c -->
      <li><a href="{{ '/' | url }}">Home</a></li>
      <li><a href="{{ '/philosyphia/' | url }}">Tri·∫øt h·ªçc tinh th·∫ßn</a></li>
      <li><a href="{{ '/tusixmode/' | url }}">Tusix mode</a></li>
      <li><a href="{{ '/about' | url }}">About</a></li>
      <li><a href="{{ '/rss.xml' | url }}" target="_blank" rel="noopener noreferrer">RSS</a></li>
    </ul>
  </nav>
</header>